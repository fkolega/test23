{
  "name": "kolega-backend",
  "version": "1.0.0",
  "description": "Hono backend API with MongoDB",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "dev": "tsc-watch --pretty --onSuccess \"node build/index.js\"",
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "dotenv": "^16.4.7",
    "hono": "^4.6.14",
    "mongodb": "^6.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "tsc-watch": "^7.1.1",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3"
  }
}
